{
    "manifest_version": 3,
    "name": "Timezone Changer",
    "version": "1.0",
    "description": "修改 Chrome 瀏覽器時區設置",
    "permissions": [
        "storage",
        "tabs",
        "debugger"
    ],
    "host_permissions": [
        "<all_urls>"
    ],
    "action": {
        "default_popup": "popup.html"
    },
    "background": {
        "service_worker": "background.js"
    }
}