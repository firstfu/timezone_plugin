{
    "manifest_version": 3,
    "name": "Timezone Switcher",
    "version": "1.0",
    "description": "快速切換 Chrome 瀏覽器時區，提升開發測試效率",
    "permissions": [
        "storage",
        "scripting",
        "tabs"
    ],
    "host_permissions": [
        "<all_urls>"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": "icons/icon48.png"
    },
    "background": {
        "service_worker": "background.js",
        "type": "module"
    },
    "icons": {
        "48": "icons/icon48.png"
    },
    "commands": {
        "_execute_action": {
            "suggested_key": {
                "default": "Ctrl+Shift+T",
                "mac": "Command+Shift+T"
            },
            "description": "開啟時區切換器"
        }
    }
}